<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/gray</item>

        <!--
        override attributes from parent themes
        ( Platform.AppCompat -> Base.V7.Theme.AppCompat -> Base.Theme.AppCompat -> Theme.AppCompat -> AppTheme )
        -->
        <item name="android:windowBackground">@color/soothing_blue</item>
        <item name="buttonStyle">@style/BeatBoxButton</item>
    </style>


    <!-- style variable for buttons in recycler_view items -->
    <style name="BeatBoxButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/dark_blue</item>
        <!--
        add something else if u wish
         -->
    </style>

</resources>
